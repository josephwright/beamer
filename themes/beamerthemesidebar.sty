\useheadtemplate{}
\usefoottemplate{}


                                % Sidebar
\usesidebartemplate[\beamer@sidebarside]{\beamer@sidebarwidth}{%
  \vskip1em
  \beamer@tempdim=\beamer@sidebarwidth%
  \advance\beamer@tempdim by -6pt%
  \tiny
  \ifbeamer@sidebardark
    \hskip3pt\color{white}\bfseries\insertshorttitle%
      [width=\beamer@tempdim,center,respectlinebreaks]\par%
    \vskip1.5em
    \hskip3pt\color{beamerstructure!50}\insertshortauthor%
      [width=\beamer@tempdim,center,respectlinebreaks]\par
  \else%
    \hskip3pt\color{beamerstructure}\insertshorttitle%
      [width=\beamer@tempdim,center,respectlinebreaks]\par%
    \vskip1.5em
    \hskip3pt\color{black!75}\insertshortauthor%
      [width=\beamer@tempdim,center,respectlinebreaks]\par
  \fi
  \vskip1.5em
  \insertverticalnavigation{\beamer@sidebarwidth}%
  \vfill
  \ifx\beamer@sidebarside\beamer@lefttext%
  \else%
    \hbox{\llap{\insertnavigationsymbols\hskip3pt}\hbox to
    \beamer@sidebarwidth{\hfil\insertlogo\hskip3pt}}
    \vskip3pt
  \fi%
}

                                % Side bar background
\ifbeamer@sidebardark
  \beamertemplatesidebarverticalshading[\beamer@sidebarside]{beamerstructure}{black}
\else
  \ifbeamer@sidebartab
    \beamertemplatesidebarverticalshading[\beamer@sidebarside]{beamerstructure!90!white}{white!95!beamerstructure}
  \else
    \beamertemplatesidebarverticalshading[\beamer@sidebarside]{white}{beamerstructure!50!averagebackgroundcolor}
  \fi
\fi
  
                                % Margins
\beamersetleftmargin{0.5cm}
\beamersetrightmargin{0.5cm}

\mode
<all>

