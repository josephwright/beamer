\newrobustcmd*\dohead{\beamer@headcounter=0\relax\loop\ifnum\beamer@headcounter<\beamer@totalheads
  \advance\beamer@headcounter by1\relax
  \csname @@head\the\beamer@headcounter\endcsname\repeat}

