\def\beamerfoils@closer{}%
\newcommand\foilhead[2][]{%
  \beamerfoils@closer%
  \ifbeamer@inframe
    \gdef\beamerfoils@closer{}%
    \let\beamerfoils@next=\relax%
  \else
    \gdef\beamerfoils@closer{\egroup}%
    \let\beamerfoils@next=\beamerfoils@openframe%
  \fi
  \beamerfoils@next%
  \frametitle{#2}%
  }
\let\rotatefoilhead=\foilhead

